<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="16">

    <item
        android:id="@+id/state_light_active"
        android:drawable="@drawable/ic_light"
        android:state_checked="true" />

    <item
        android:id="@+id/state_light_inactive"
        android:drawable="@drawable/ic_light"
        android:state_checked="false"
        />

    <transition
        android:drawable="@drawable/avd_light"
        android:fromId="@id/state_light_inactive"
        android:toId="@id/state_light_active" />

</animated-selector>