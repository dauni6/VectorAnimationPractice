<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="16">

    <item
        android:id="@+id/state_stats_active"
        android:drawable="@drawable/ic_stats"
        android:state_checked="true" />

    <item
        android:id="@+id/state_stats_inactive"
        android:drawable="@drawable/ic_stats"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/avd_stats"
        android:fromId="@id/state_stats_inactive"
        android:toId="@id/state_stats_active" />

</animated-selector>
